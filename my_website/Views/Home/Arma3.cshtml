    <p>These are mine screenshots from my Steam account.</p>
    <p>I will add soon more content here including videos and SQF scripts</p>
</div>

<div class="grid">
    @{
        bool isFirst = true;

        foreach (var url in imgsUrls)
        {
            string cssClass = "grid-item";
            if (isFirst)
            {
                cssClass = "grid-sizer";
            }
            else
            {
                if (random.Next(0, 10) >= 5)
                {
                    cssClass += " grid-item--width2";
                }
            }

            isFirst = false;

            //var width = random.Next(150, 700).ToString() + "px";

            <img src="@url" alt="Arma3" class="@cssClass" onclick="window.open('@url');" />
        }

