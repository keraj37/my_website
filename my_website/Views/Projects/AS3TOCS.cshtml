@{
    ViewBag.Title = "AS3TOCS";
}

@Html.Partial("_ProjectsPartial")

<div>
    <div class="myentry">
        <h2>How to use it</h2>
        <p>
            It is as simple as copy/paste your as3 source into the textbox visible below, and pressing "Convert" button.
            <br/>
            If everything went good, as a result you will recive your cs file.
        </p>
    </div>
    <section id="console">        
        <div>
            @using (Html.BeginForm("AS3TOCS", "Projects", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                <textarea id="input" type="text" name="source" class="input" autofocus style="width:100%; height:300px;"></textarea>
                <input id="key-input" type="text" name="key" class="console" value="Choose a key to ensure file is sent only to you." autofocus />
                <input id="convert" type="submit" value="Convert" class="console-button" />
            }
        </div>       
    </section>
</div>
