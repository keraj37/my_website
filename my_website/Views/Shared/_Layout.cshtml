@{
    var allNavigations = new[]
    {
        new { linkText = "Home", actionName = "Index", controlerName = "Home" },
        new { linkText = "About", actionName = "About", controlerName = "Home" },
        new { linkText = "Contact", actionName = "Contact", controlerName = "Home" },
        new { linkText = "3D", actionName = "Art", controlerName = "Home" },
        //new { linkText = "Arma3", actionName = "Arma3", controlerName = "Home" },
        new { linkText = "Projects", actionName = "Index", controlerName = "Projects" },
        new { linkText = "Blog", actionName = "Index", controlerName = "Blog" }
    };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jerry Switalski - Personal Website</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-custom navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @foreach (var nav in allNavigations)
                    {
                        string active = ViewBag.Title == nav.linkText ? "class=\"active\"" : string.Empty;
                        <li @Html.Raw(active)>@Html.ActionLink(nav.linkText, nav.actionName, nav.controlerName)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jerry Switalski</p>
            <br />
            
            <ul id="visitors"></ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myscripts")
    @Scripts.Render("~/bundles/ajax")
    @Scripts.Render("~/bundles/signalr")  

    @Html.Partial("_GlobalPartial")

    @RenderSection("Scripts", false)
</body>
</html>
